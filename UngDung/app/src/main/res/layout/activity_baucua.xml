<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ctu.tranminhtai.ungdung.Baucua">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:id="@+id/textViewDiem"
        android:background="#fffff490"
        android:textColor="#000"
        android:layout_below="@+id/frameLayout"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView"
        android:src="@drawable/ictien"
        android:layout_gravity="left|center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView1"
        android:src="@drawable/lac"
        android:layout_alignTop="@+id/ImageView"
        android:layout_toLeftOf="@+id/buttonLac"
        android:layout_toStartOf="@+id/buttonLac" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/lac"
        android:id="@+id/ImageView"
        android:layout_above="@+id/buttonLac"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:src="@drawable/lac"
        android:layout_alignTop="@+id/ImageView"
        android:layout_toRightOf="@+id/buttonLac"
        android:layout_toEndOf="@+id/buttonLac" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Láº¯c"
        android:id="@+id/buttonLac"
        android:background="#fffff490"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <GridView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/gib"
        android:numColumns="3"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:id="@+id/textViewNoiDung"
        android:textColor="#000"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/gib"
        android:layout_alignStart="@+id/gib" />

</RelativeLayout>
