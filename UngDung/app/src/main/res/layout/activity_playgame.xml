<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_playgame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background28"
    tools:context="ctu.tranminhtai.ungdung.Playgame">

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Game Rút Lá Bài"
        android:id="@+id/buttonRutLaBai"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        android:textColor="#fe0303"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/buttonTraLoiCauHoi"
        android:layout_alignLeft="@+id/buttonTraLoiCauHoi"
        android:layout_alignStart="@+id/buttonTraLoiCauHoi" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Game Bầu Cua"
        android:id="@+id/buttonBauCua"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        android:textColor="#fe0303"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/buttonRutLaBai"
        android:layout_alignLeft="@+id/buttonRutLaBai"
        android:layout_alignStart="@+id/buttonRutLaBai" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Game Trả Lời Câu Hỏi"
        android:id="@+id/buttonTraLoiCauHoi"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        android:textColor="#fe0303"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
