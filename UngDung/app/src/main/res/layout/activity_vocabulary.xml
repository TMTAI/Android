<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ctu.tranminhtai.ungdung.Vocabulary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/TextViewWord"
        android:textSize="25dp"
        android:textColor="#C71585"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Nghĩa của từ:"
        android:id="@+id/TextView"
        android:layout_marginTop="23dp"
        android:textSize="20dp"
        android:textColor="#0000FF"
        android:layout_below="@+id/TextViewWord"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Từ loại:"
        android:id="@+id/TextView2"
        android:textColor="#0000FF"
        android:textSize="20dp"
        android:layout_below="@+id/TextViewNghia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="New Text"
        android:id="@+id/TextViewType"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/TextView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="New Text"
        android:id="@+id/TextViewPhatAm"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/TextView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ImageButtonGobackContent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFFACD"
        android:src="@drawable/goback" />

    <TextView
        android:text="New Text"
        android:id="@+id/TextViewNghia"
        android:textColor="#000000"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:scrollbars="vertical"
        android:layout_below="@+id/TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Cách phát âm:"
        android:textColor="#0000FF"
        android:textSize="20dp"
        android:id="@+id/TextView3"
        android:layout_below="@+id/TextViewType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/ImageButtonSpeak"
        android:background="#FFFACD"
        android:src="@drawable/loa"
        android:layout_below="@+id/TextViewPhatAm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
